<!-- Plugin Configuration File. Read more: https://plugins.jetbrains.com/docs/intellij/plugin-configuration-file.html -->
<idea-plugin>
    <!--    See https://github.com/JetBrains/intellij-sdk-code-samples/blob/main/product_specific/pycharm_basics/src/main/resources/META-INF/plugin.xml-->
    <!--Unique id for this plugin. Must stay constant for the life of the plugin. -->-->
    <id>com.github.cd721.data_leakage_plugin</id>
    <name>Data Leakage Detector</name>

    <!-- Text to display as company information on Settings | Plugin page -->
    <vendor>cd721</vendor>

    <depends>com.intellij.modules.platform</depends>
    <depends>com.intellij.modules.lang</depends>
    <depends>com.intellij.modules.python</depends>
    <depends>com.intellij.modules.python-core-capable</depends>

    <resource-bundle>messages.MyBundle</resource-bundle>
    <extensions defaultExtensionNs="com.intellij">
        <localInspection language="Python"
                         groupPath="Python"
                         groupName="Unittest"
                         enabledByDefault="true"
                         level="WEAK WARNING"
                         implementationClass="com.github.cd721.data_leakage_plugin.inspections.MyInspection"
                         displayName="Overlap leakage"
                         shortName="MyInspection"/>
    </extensions>
    
    <actions>
        <action id="com.github.cd721.data_leakage_plugin.actions.LeakageAnalysisAction"
                class="com.github.cd721.data_leakage_plugin.actions.LeakageAnalysisAction" text="Run Leakage Analysis"
                description="Runs leakage analysis on currently open file">
            <add-to-group group-id="ToolsMenu" anchor="first"/>
        </action>
        <action id="com.github.cd721.data_leakage_plugin.actions.IPYNBAnalysis"
                class="com.github.cd721.data_leakage_plugin.actions.IPYNBAnalysis" text="IPYNB Analysis"
                description="Run leakage analysis for IPYNB File">
            <add-to-group group-id="ToolsMenu" anchor="first"/>
        </action>
    </actions>

    <applicationListeners>

        <listener
                class="com.github.cd721.data_leakage_plugin.listeners.FileChangeDetector"
                topic="com.intellij.openapi.vfs.newvfs.BulkFileListener"/>

        <listener
                class="com.github.cd721.data_leakage_plugin.listeners.LeakageFileChangeDetector"
                topic="com.intellij.openapi.vfs.newvfs.BulkFileListener"/>
    </applicationListeners>
</idea-plugin>
